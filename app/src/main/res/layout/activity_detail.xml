<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <TextView
        android:id="@+id/nim_ida"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Nim"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nm_ida"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nim_ida"
        android:layout_margin="5dp"
        android:text="Nama"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/n_ida"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nm_ida"
        android:layout_margin="5dp"
        android:text="Nilai"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/keterangan"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/n_ida"
        android:layout_margin="5dp"
        android:text="Keterangan"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/nim_ida"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nim"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/nm_ida"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_nilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nama"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/n_ida"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_keterangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nilai"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/keterangan"
        android:textSize="18sp" />
</RelativeLayout>